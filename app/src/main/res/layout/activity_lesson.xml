<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lesson"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nasreldinaid.caasera.LessonActivity">

    <Button
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="404dp"
        android:id="@+id/ButtonLogin"/>

    <Button
        android:text="Free Trial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FreeTrialBtton"
        android:layout_alignBaseline="@+id/ButtonLogin"
        android:layout_alignBottom="@+id/ButtonLogin"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:srcCompat="@mipmap/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView10"
        android:layout_alignParentEnd="true"
        android:background="#606060"/>

    <TextView
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sed turpis velit. Pellentesque nec augue ut ligula consectetur venenatis. Nullam finibus condimentum posuere. Mauris et arcu sodales, aliquam ante in, lacinia dolor. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_below="@+id/imageView10"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        />

    <TextView
        android:text="Nunc aliquam non ligula vitae iaculis."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView10"
        android:layout_marginTop="40dp"
        android:id="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"/>

</RelativeLayout>
